<html>
  <head>
    <title>Dependency Graph</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <script src="./jquery.min.js"></script>

    <script src="https://gw.alipayobjects.com/os/antv/pkg/_antv.g6-3.2.3/build/g6.js"></script>
    <script src="https://gw.alipayobjects.com/os/antv/pkg/_antv.g6-3.1.1/build/minimap.js"></script>
    <style>
      body {
        font-family: helvetica;
        font-size: 14px;
      }
      #graph { /*change your css*/
        width: 100%;
        height: 100%;
      }
      h1 {
        opacity: 0.5;
        font-size: 1em;
      }
      .navbar {
        z-index: 1000;
      }
      .g6-tooltip {
        border: 1px solid #e2e2e2;
        border-radius: 4px;
        font-size: 12px;
        color: #000;
        background-color: rgba(255, 255, 255, 0.9);
        padding: 10px 8px;
        box-shadow: rgb(174, 174, 174) 0px 0px 10px;
      }
      .minimap {
        position: absolute;
        top: 1;
        left: 1;
      }

      .dependency-info {
        position: absolute;
        top: 1;
        right: 1;
        background-color: rgba(255, 255, 255, 0.9);
        height: 100%;
        box-shadow: rgb(174, 174, 174) 0px 0px 10px;
        display: none;
      }

      code {
        display: block;
        white-space: pre-wrap;
        overflow-y: scroll;
        height: 80%;
      }
    </style>
  </head>
  <body>
    <div class="container-fluid">
      <div id="graph" style="height: 100%;"></div>
    </div>

    <div class="dependency-info">
      <a class="dependency-info_close" href="#">Close</a>

      <div class="dependency-info_container">
      </div>
    </div>

    <script>
      document.addEventListener('DOMContentLoaded', function() {
        $(".dependency-info_close").click(function( event ) {
          event.preventDefault();
          $(".dependency-info").hide();
        });

        buildGraph(JSON.parse(<%= @json_graph =%>))
      });
    </script>

    <script src="./index.js"></script>
  </body>
</html>
